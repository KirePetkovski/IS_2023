@{
}


@model List<AdminApplication.Models.Order>

<div class="container">

    <div class="row">
        <a class="btn btn-outline-danger" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>


    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Име на филм</th>
                <th scope="col">Жарн</th>
                <th scope="col">Краен рок за купување тикет</th>

                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.TicketInOrders.ElementAt(i).Ticket.MovieName</td>
                    <td>@item.TicketInOrders.ElementAt(i).Ticket.Zarn</td
                    <td>@item.TicketInOrders.ElementAt(i).Ticket.DateAvailable</td>
                    <td></td>
                    <td><a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                    <td><a class="btn btn-outline-primary" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
                </tr>

            }
        </tbody>


    </table>

</div>